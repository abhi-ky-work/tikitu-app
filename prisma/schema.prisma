generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(cuid())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  passwordHash String?

  email String? @unique
  countryCode String?
  phone String?
  firstName String?
  lastName String?
  age Int?
  dateOfBirth DateTime?
  postalCode String?
  addressLine1 String?
  addressLine2 String
  country String?
  state String?
  city String?
  // password String
}
